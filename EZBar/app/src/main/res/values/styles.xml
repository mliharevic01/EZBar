<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mediumgreen</item>
        <item name="colorPrimaryDark">@color/darkgreen</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:navigationBarColor">@color/mediumgreen</item>


      <!--  <item name="android:activatedBackgroundIndicator">@drawable/nav_highlight_state</item>-->
    </style>
    <!--commented out in the top is what gives color to the nav menu highlight -->

    <style name="TextView">
        <item name="android:textColor">@color/mediumgreen</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextViewSmall">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewEmployee">
        <item name="android:textColor">@color/mediumgreen</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewEmployeeSmall">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




</resources>
